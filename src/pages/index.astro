---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Hand Models Canada">
	<header class="relative h-96 md:h-[500px] mb-12">
		<img src="/header.jpg" alt="Canadian landscape" class="w-full h-full object-cover object-center">
		<div class="absolute bottom-0 left-0 w-full p-6 text-white bg-gradient-to-t from-black to-transparent">
			<h1 class="text-4xl font-extrabold">Hand Models in <span class="bg-gradient-to-r from-purple-500 via-blue-500 to-green-500 bg-clip-text text-transparent">Canada</span></h1>
		</div>
	</header>
	<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
		<p class="text-lg text-center mb-8">
			Discover professional hand models in Canada. Browse our featured hand models and elevate your brand.
		</p>
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
			<Card
				href="#"
				title="Model 1"
				body="Canada-based hand model with extensive experience in print and digital media."
			/>
			<Card
				href="#"
				title="Model 2"
				body="A versatile hand model experienced in product demonstrations and commercials."
			/>
			<Card
				href="#"
				title="Model 3"
				body="Specializing in hand modeling for jewelry, watches, and luxury brands."
			/>
			<Card
				href="#"
				title="Model 4"
				body="A talented hand model with a unique style, ideal for creative campaigns."
			/>
		</div>
	</main>
</Layout>
